@model ProyectoPostItProgramacionWeb.Models.Mazo
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_AdmLayout";
}
<div class="FormularioGeneral">
    <p class="TituloFormulario">Eliminar una nota</p>
    <form method="get" action="~/Usuario/PostIt/Eliminar/">
        <input type="text" asp-for="Id" hidden />
        <p>¿Desea eliminar&nbsp; @Model.Titulo?</p>
        <p id="error">@Html.ValidationSummary()</p>
        <input type="submit" />
    </form>
</div>