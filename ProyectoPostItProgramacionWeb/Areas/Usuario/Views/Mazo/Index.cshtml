@model IEnumerable<ProyectoPostItProgramacionWeb.Models.Mazo>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    @{
        Layout = "_AdmLayout";
    }
    <h2 style="width: 100vw; background-color: #fafafadd" class="Bienvenido">Bienvenido a tu lista de Mazos, @User.Identity.Name</h2>
    @foreach (var mazo in Model)
    {
        <div class="contenedorNota">
            <a href="~/Usuario/Usuario/EditarMazo/@mazo.Id"><i class="fas fa-pen" style="color:black;text-align:end;"></i></a>
            <a href="~/Usuario/Usuario/EliminarMazo/@mazo.Id"><i class="fas fa-trash" style="color:black; text-align:end;"></i></a>
            <p class="tituloMazo" name="Titulo">@mazo.Titulo</p>                  
        </div>
    }
