@model ProyectoPostItProgramacionWeb.ViewModels.PostItViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_AdmLayout";
}
<div class="FormularioGeneral">
    <p class="TituloFormulario">Editar una nota</p>
    <form method="post" action="~/Usuario/PostIt/Editar/" enctype="multipart/form-data">
        <p>Nombre del título</p>
        <input type="text" asp-for="Nota.Titulo" readonly/>
        <p>Descripción</p>
        <input type="text" asp-for="Nota.Descripcion" /><br />
        <input type="file" accept="audio/mp3" asp-for="Audio" />
        <p id="error">@Html.ValidationSummary()</p>
        <input type="submit" />
    </form>
</div>