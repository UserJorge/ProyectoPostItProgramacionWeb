@model ProyectoPostItProgramacionWeb.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<div class="FormularioGeneral">
    <p class="TituloFormulario">Registrarse</p>
    <form method="POST" action="~/Usuario/Registrarse/">
        <p>Nombre de usuario</p>
        <input type="text" asp-for="Nombre" /><br />
        <p>Contraseña</p>
        <input type="password"  asp-for="Password"/><br />
        <p id="error">@Html.ValidationSummary()</p>
        <input type="submit" />
    </form>
</div>
