@model ProyectoPostItProgramacionWeb.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<div class="FormularioGeneral">
    <p class="TituloFormulario">Registrarse</p>
    <form method="POST" action="~/Usuario/Registrarse/">
        <p>Correo Electrónico</p>
        <input type="text" asp-for="Nombre" /><br />
        <p>Contraseña</p>
        <input type="password" name="Pass" asp-for="Password" /><br />
        <input type="submit" />
    </form>
</div>
