@model ProyectoPostItProgramacionWeb.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<div class="FormularioGeneral">
    <p class="TituloFormulario">Iniciar Sesión</p>
    <form method="POST" action="~/Usuario/IniciarSesion/">
        <p>Nombre de usuario</p>
        <input type="text" asp-for="Nombre" required/><br />
        <p>Contraseña</p>
        <input type="password" asp-for="Password" required /><br />
        <p id="error">@Html.ValidationSummary()</p>
        <input type="submit" value="Entrar" />
    </form>
</div>

