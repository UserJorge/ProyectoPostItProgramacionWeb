@model ProyectoPostItProgramacionWeb.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<div class="FormularioGeneral">
    <p class="TituloFormulario">Iniciar Sesión</p>
    <form class="Forminiciarsesion" method="POST"  action="~/Usuario/IniciarSesion/">
        <p>Nombre de usuario</p>
        <input class="nombreusuarioiniciarsesion" type="text" asp-for="Nombre" required/><br />
        <p>Contraseña</p>
        <input class="contraseñainiciarsesion"  type="password" asp-for="Password" required /><br />
        <a class="erroriniciarsesion" id="error">@Html.ValidationSummary()</a>
        <input class="BotonIniciarSesion" type="submit" value="Entrar" />
    </form>
</div>

