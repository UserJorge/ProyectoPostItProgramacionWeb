@model ProyectoPostItProgramacionWeb.ViewModels.PostItViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<div class="FormularioGeneral">
    <p class="TituloFormulario">Editar Nota</p>
    <form class="FormEditar" method="post"  action="~/Notas/Editar/" enctype="multipart/form-data">
        <p>Seleccionar un Mazo</p>
        <select class="seleccionareditarnota" asp-items="@(new SelectList(Model.Mazos,"Id","Titulo"))" asp-for="Nota.IdMazo">
            <option class="selec" value="@Model.Nota.IdMazo" selected="selected">@Model.Nota.IdMazoNavigation.Nota</option>
        </select>
        <p>Nombre del título</p>
        <input class="tituloagregarnota" type="text"  asp-for="Nota.Titulo" readonly />
        <p>Descripción</p>
        <input class="descripcioneditarnota" type="text"  asp-for="Nota.Descripcion" /><br />
        <input class="audioeditarnota" type="file" accept="audio/mp3" asp-for="Audio" />
        <input class="Botoneditarnota" type="submit"  value="Guardar &#x1f5ab;"/>
    </form>
</div>